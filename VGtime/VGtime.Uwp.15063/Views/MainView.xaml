        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <loopingList:RadLoopingList ItemsSource="{Binding Path=HeadPosts}">
                    <loopingList:RadLoopingList.ItemStyle>
                        <Style TargetType="loopingList:LoopingListItem">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <localControls:HeadPostItem />
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </loopingList:RadLoopingList.ItemStyle>
                </loopingList:RadLoopingList>
