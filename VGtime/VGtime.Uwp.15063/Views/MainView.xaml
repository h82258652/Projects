                    <Run Text="Index" /><Run Text="/" /><Run Text="Count" /></TextBlock>-->
            </Grid>
            <ListView x:Name="ListView"
                      Grid.Row="1"
                      IsItemClickEnabled="True"
                      ItemsSource="{Binding Path=TempPosts}"
                      SelectionMode="None">
                <interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="ItemClick">
                        <core:InvokeCommandAction Command="{Binding Path=PostClickCommand}"
                                                  InputConverter="{Binding Source={StaticResource ItemClickEventArgsConverter}}" />
                    </core:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <localControls:ListPostItem />
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch" />
                        <Setter Property="BorderThickness"
                                Value="0,0,0,1" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>
    </Grid>
</Page>