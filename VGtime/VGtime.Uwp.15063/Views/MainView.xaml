<Page x:Class="VGtime.Uwp.Views.MainView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:VGtime.Uwp.Controls"
      xmlns:converters="using:SoftwareKobo.Converters"
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
      Loaded="MainView_Loaded"
      mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <converters:ItemClickEventArgsConverter x:Key="ItemClickEventArgsConverter" />
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!--<Pivot>
            <Pivot.LeftHeader>
                <Button />
            </Pivot.LeftHeader>
            <Pivot.Items>
                <PivotItem Header="首页"></PivotItem>
                <PivotItem Header="新闻" />
                <PivotItem Header="评测" />
                <PivotItem Header="视频" />
                <PivotItem Header="攻略" />
                <PivotItem Header="专栏" />
            </Pivot.Items>
            <Pivot.RightHeader>
                <Button />
            </Pivot.RightHeader>
        </Pivot>-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <FlipView ItemsSource="{Binding Path=HeadPosts}">
                    <FlipView.ItemTemplate>
                        <DataTemplate>
                            <controls:HeadPostItem />
                        </DataTemplate>
                    </FlipView.ItemTemplate>
                    <FlipView.ItemContainerStyle>
                        <Style TargetType="FlipViewItem">
                            <Setter Property="VerticalAlignment"
                                    Value="Top"></Setter>
                        </Style>
                    </FlipView.ItemContainerStyle>
                </FlipView>
                <!--<TextBlock VerticalAlignment="Bottom"
                           Foreground="White"
                           Text="Title" />
                <TextBlock>
                    <Run Text="Index" /><Run Text="/" /><Run Text="Count" /></TextBlock>-->
            </Grid>
            <ListView x:Name="ListView"
                      Grid.Row="1"
                      IsItemClickEnabled="True"
                      ItemsSource="{Binding Path=TempPosts}"
                      SelectionMode="None">
                <interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="ItemClick">
                        <core:InvokeCommandAction Command="{Binding Path=PostClickCommand}"
                                                  CommandParameter="{Binding Source={StaticResource ItemClickEventArgsConverter}}" />
                    </core:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Image Source="{Binding Path=Thumbnail.Url}" />
                            <TextBlock Text="{Binding Path=Title}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch" />
                        <Setter Property="BorderThickness"
                                Value="0,0,0,1" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>
    </Grid>
</Page>