<UserControl x:Class="VGtime.Uwp.Controls.HeadPostItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:VGtime.Uwp.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:VGtime.Models"
             d:DataContext="{d:DesignInstance Type=models:Post}"
             mc:Ignorable="d">
    <Grid>
        <Viewbox Stretch="UniformToFill"
                 VerticalAlignment="Center">
            <Image Source="{Binding Path=Thumbnail.Url}" />
        </Viewbox>
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0"
                                     EndPoint="0.5,1">
                    <GradientStop Offset="0"
                                  Color="Transparent" />
                    <GradientStop Offset="1"
                                  Color="#80000000" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <TextBlock Margin="12,0,0,12"
                   VerticalAlignment="Bottom"
                   Foreground="White"
                   Text="{Binding Path=Title}" />
    </Grid>
</UserControl>