<UserControl x:Class="VGtime.Uwp.Controls.ListPostItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:VGtime.Uwp.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:VGtime.Models"
             d:DataContext="{d:DesignInstance Type=models:Post}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:TimeAgoConverter x:Key="TimeAgoConverter" />
            <converters:IntegerToVisibilityConverter x:Key="IntegerToVisibilityConverter" />
            <converters:ReviewScoreToColorConverter x:Key="ReviewScoreToColorConverter" />
            <converters:IsNullToVisibilityConverter x:Key="IsNullToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Ellipse Grid.Column="0"
                     Width="24"
                     Height="24"
                     VerticalAlignment="Center">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="{Binding Path=User.AvatarUrl}" />
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock Grid.Column="1"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Foreground="#9C9C9C"
                       Text="{Binding Path=User.Name}" />
            <TextBlock Grid.Column="2"
                       Margin="8,0,0,0"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Foreground="#9C9C9C"
                       Text="{Binding Path=PublishDate, Converter={StaticResource TimeAgoConverter}}" />
            <StackPanel Grid.Column="3"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <TextBlock FontSize="14"
                           Foreground="{ThemeResource VGtimeAccentBrush}"
                           Text="{Binding Path=Category}" />
                <Border Width="2"
                        Margin="8,2,0,2"
                        Background="{ThemeResource VGtimeAccentBrush}" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1"
              Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           FontSize="16"
                           Text="{Binding Path=Title}"
                           TextWrapping="Wrap" />
                <StackPanel Grid.Row="1"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Visibility="{Binding Path=CommentNum, Converter={StaticResource IntegerToVisibilityConverter}}">
                    <Viewbox Width="18"
                             Height="18"
                             VerticalAlignment="Bottom">
                        <SymbolIcon Foreground="#9C9C9C"
                                    Symbol="Comment" />
                    </Viewbox>
                    <TextBlock Margin="4,0,0,0"
                               VerticalAlignment="Bottom"
                               FontSize="14"
                               Foreground="#9C9C9C"
                               Text="{Binding Path=CommentNum}" />
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1"
                  Margin="12,0,0,0"
                  Background="#f5f5f5">
                <Viewbox Width="90"
                         Stretch="UniformToFill">
                    <Grid>
                        <Border Width="960"
                                Height="600" />
                        <Image Source="{Binding Path=Thumbnail.Url}" />
                    </Grid>
                </Viewbox>
                <Border HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="{Binding Path=ReviewScore, Converter={StaticResource ReviewScoreToColorConverter}}"
                        Visibility="{Binding Path=ReviewScore, Converter={StaticResource IsNullToVisibilityConverter}}">
                    <StackPanel Margin="2,4,2,4"
                                Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   LineHeight="16"
                                   LineStackingStrategy="BlockLineHeight"
                                   Text="{Binding Path=ReviewScore}" />
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="10"
                                   Foreground="White"
                                   LineHeight="12"
                                   LineStackingStrategy="BlockLineHeight"
                                   Text="分" />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>