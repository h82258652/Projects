<UserControl x:Class="VGtime.Uwp.Controls.HeadpicItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:SoftwareKobo.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:timeline="using:VGtime.Models.Timeline"
             d:DataContext="{d:DesignInstance Type=timeline:TimeLineBase}"
             mc:Ignorable="d">
    <Grid>
        <Viewbox VerticalAlignment="Center"
                 Stretch="UniformToFill">
            <controls:ImageEx Source="{Binding Path=Thumbnail.Url}" />
        </Viewbox>
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0"
                                     EndPoint="0.5,1">
                    <GradientStop Offset="0"
                                  Color="Transparent" />
                    <GradientStop Offset="1"
                                  Color="#80000000" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <TextBlock Margin="16,0,0,16"
                   VerticalAlignment="Bottom"
                   Foreground="White"
                   Text="{Binding Path=Title}" />
    </Grid>
</UserControl>