<UserControl x:Class="VGtime.Uwp.Controls.CommentItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:VGtime.Uwp.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:timeline="using:VGtime.Models.Timeline"
             d:DataContext="{d:DesignInstance Type=timeline:TimeLineBase}"
             mc:Ignorable="d">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/VGtimeColorStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:TimeAgoConverter x:Key="TimeAgoConverter" />
        </ResourceDictionary>
    </FrameworkElement.Resources>
    <Grid>
        <Ellipse Width="24"
                 Height="24">
            <Ellipse.Fill>
                <ImageBrush ImageSource="{Binding Path=Comment.User.AvatarUrl}" />
            </Ellipse.Fill>
        </Ellipse>
        <TextBlock Text="{Binding Path=Comment.User.Name}" />
        <TextBlock Text="{Binding Path=Comment.PublishDate, Converter={StaticResource TimeAgoConverter}}" />
        <TextBlock Text="{Binding Path=Comment.Remark}" />
    </Grid>
</UserControl>