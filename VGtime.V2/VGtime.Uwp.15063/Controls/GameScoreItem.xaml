<UserControl x:Class="VGtime.Uwp.Controls.GameScoreItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:games="using:VGtime.Models.Games"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance Type=games:GameScore}"
             mc:Ignorable="d">
    <Grid>
        <TextBlock Text="{Binding Path=Content}" />
        <TextBlock Text="{Binding Path=User.Name}" />
        <Ellipse>
            <Ellipse.Fill>
                <ImageBrush ImageSource="{Binding Path=User.AvatarUrl}" />
            </Ellipse.Fill>
        </Ellipse>
        <TextBlock Text="{Binding Path=Score}" />
    </Grid>
</UserControl>