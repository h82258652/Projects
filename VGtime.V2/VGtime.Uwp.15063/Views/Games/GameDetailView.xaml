<Page x:Class="VGtime.Uwp.Views.Games.GameDetailView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:behaviors="using:SoftwareKobo.Behaviors"
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      DataContext="{Binding Source={StaticResource Locator}, Path=GameDetail}"
      mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="{ThemeResource VGtimeAccentBrush}">
            <Button Style="{StaticResource NavigationBackButtonStyle}">
                <interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="Click">
                        <behaviors:GoBackAction />
                    </core:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
            </Button>
            <TextBlock Style="{StaticResource VGtimePageHeaderTextControlStyle}"
                       Text="{Binding Path=GameDetail.Title}" />
        </Grid>
        <Grid Grid.Row="1">
            <Image Source="{Binding Path=GameDetail.Thumbnail.Url}" />
            <TextBlock Text="{Binding Path=GameDetail.ImageCount}" />
            <StackPanel Orientation="Horizontal">
                <Button Content="想玩" />
                <Button Content="在玩" />
                <Button Content="玩过" />
                <Button Content="通关" />
            </StackPanel>
            <TextBlock Text="游戏简介" />
            <TextBlock Text="{Binding Path=GameDetail.Introduction}"
                       TextWrapping="Wrap" />
            <TextBlock Text="{Binding Path=GameDetail.ScoreCount}" />
        </Grid>
    </Grid>
</Page>