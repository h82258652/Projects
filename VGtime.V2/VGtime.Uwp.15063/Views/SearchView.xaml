<views:VGtimeViewBase x:Class="VGtime.Uwp.Views.SearchView"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:behaviors="using:SoftwareKobo.Behaviors"
                      xmlns:controls="using:VGtime.Uwp.Controls"
                      xmlns:converters="using:SoftwareKobo.Converters"
                      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
                      xmlns:localConverters="using:VGtime.Uwp.Converters"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:views="using:VGtime.Uwp.Views"
                      DataContext="{Binding Source={StaticResource Locator}, Path=Search}"
                      NavigationCacheMode="Required"
                      mc:Ignorable="d">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <converters:ItemClickEventArgsConverter x:Key="ItemClickEventArgsConverter" />
            <localConverters:AutoSuggestBoxQuerySubmittedEventArgsConverter x:Key="AutoSuggestBoxQuerySubmittedEventArgsConverter" />
        </ResourceDictionary>
    </FrameworkElement.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="{ThemeResource VGtimeAccentBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Style="{StaticResource NavigationBackButtonStyle}">
                <interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="Click">
                        <behaviors:GoBackAction />
                    </core:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
            </Button>
            <AutoSuggestBox Grid.Column="1"
                            VerticalAlignment="Center"
                            ItemsSource="{Binding Path=Hotword}"
                            PlaceholderText="请输入搜索内容">
                <interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="QuerySubmitted">
                        <core:InvokeCommandAction Command="{Binding Path=SearchCommand}"
                                                  InputConverter="{StaticResource AutoSuggestBoxQuerySubmittedEventArgsConverter}" />
                    </core:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
                <AutoSuggestBox.QueryIcon>
                    <SymbolIcon Symbol="Find" />
                </AutoSuggestBox.QueryIcon>
            </AutoSuggestBox>
        </Grid>
        <controls:VGtimePivot x:Name="RootPivot"
                              Grid.Row="1"
                              SelectedHeaderItemClick="RootPivot_SelectedHeaderItemClick">
            <FrameworkElement.Resources>
                <ResourceDictionary>
                    <Style BasedOn="{StaticResource VGtimePivotHeaderItemStyle}"
                           TargetType="PivotHeaderItem" />
                </ResourceDictionary>
            </FrameworkElement.Resources>
            <PivotItem Header="文章">
                <controls:VGtimeGridView x:Name="ArticlesGridView"
                                         Padding="12,12,0,0"
                                         IsItemClickEnabled="True"
                                         ItemsSource="{Binding Path=Articles}"
                                         MaxItemWidth="600"
                                         SelectionMode="None">
                    <interactivity:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="ItemClick">
                            <core:InvokeCommandAction Command="{Binding Path=ArticleClickCommand}"
                                                      InputConverter="{StaticResource ItemClickEventArgsConverter}" />
                        </core:EventTriggerBehavior>
                    </interactivity:Interaction.Behaviors>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:ListPostItem />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="SelectorItem">
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" />
                            <Setter Property="VerticalContentAlignment"
                                    Value="Stretch" />
                            <Setter Property="Margin"
                                    Value="0,0,12,12" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </controls:VGtimeGridView>
            </PivotItem>
            <PivotItem Header="俱乐部">
                <controls:VGtimeGridView x:Name="ForumsGridView"
                                         ItemsSource="{Binding Path=Forums}"
                                         SelectionMode="None">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Text}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </controls:VGtimeGridView>
            </PivotItem>
            <PivotItem Header="用户">
                <controls:VGtimeGridView x:Name="UsersGridView"
                                         ItemsSource="{Binding Path=Users}"
                                         SelectionMode="None">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Name}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </controls:VGtimeGridView>
            </PivotItem>
            <PivotItem Header="游戏">
                <controls:VGtimeGridView x:Name="GamesGridView"
                                         Padding="12,12,0,0"
                                         IsItemClickEnabled="True"
                                         ItemsSource="{Binding Path=Games}"
                                         MaxItemWidth="600"
                                         SelectionMode="None">
                    <interactivity:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="ItemClick">
                            <core:InvokeCommandAction Command="{Binding Path=GameClickCommand}"
                                                      InputConverter="{StaticResource ItemClickEventArgsConverter}" />
                        </core:EventTriggerBehavior>
                    </interactivity:Interaction.Behaviors>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:GameItem />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="SelectorItem">
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" />
                            <Setter Property="VerticalContentAlignment"
                                    Value="Stretch" />
                            <Setter Property="Margin"
                                    Value="0,0,12,12" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                </controls:VGtimeGridView>
            </PivotItem>
            <Pivot.ItemContainerStyle>
                <Style TargetType="PivotItem">
                    <Setter Property="Margin"
                            Value="0" />
                </Style>
            </Pivot.ItemContainerStyle>
        </controls:VGtimePivot>
    </Grid>
</views:VGtimeViewBase>