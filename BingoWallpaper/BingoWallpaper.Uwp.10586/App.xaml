<Application x:Class="BingoWallpaper.Uwp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="using:BingoWallpaper.Uwp.ViewModels"
             RequestedTheme="Light">
    <Application.Resources>
        <viewModels:ViewModelLocator x:Key="Locator" />
        <Style TargetType="TextElement">
            <Setter Property="FontFamily"
                    Value="/Assets/Fonts/Roboto-Regular.ttf#Roboto,/Assets/Fonts/SourceHanSansSC-Normal.otf#Source Han Sans SC" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="/Assets/Fonts/Roboto-Regular.ttf#Roboto,/Assets/Fonts/SourceHanSansSC-Normal.otf#Source Han Sans SC" />
        </Style>
    </Application.Resources>
</Application>