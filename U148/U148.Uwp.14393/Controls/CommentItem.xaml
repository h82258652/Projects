<UserControl x:Class="U148.Uwp.Controls.CommentItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:U148.Models"
             d:DataContext="{d:DesignInstance Type=models:Comment}"
             DataContextChanged="CommentItem_DataContextChanged"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0"
               VerticalAlignment="Top"
               Source="{Binding Path=User.Icon}" />
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"
                        Orientation="Horizontal">
                <TextBlock Text="{Binding Path=User.Nickname}" />
                <TextBlock Text="{Binding Path=FloorNo}" />
            </StackPanel>
            <WebView x:Name="ContentHost"
                     Grid.Row="1"
                     ScriptNotify="ContentHost_ScriptNotify" />
        </Grid>
    </Grid>
</UserControl>