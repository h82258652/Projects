<UserControl x:Class="U148.Uwp.Controls.ArticleItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:U148.Models"
             d:DataContext="{d:DesignInstance Type=models:Article}"
             mc:Ignorable="d">
    <Grid>
        <TextBlock Text="{Binding Path=Title}" />
        <TextBlock Text="{Binding Path=CountBrowse}" />
        <TextBlock Text="{Binding Path=CountReview}" />
        <Image Source="{Binding Path=PicMid}" />
        <TextBlock Text="{Binding Path=Summary}"
                   TextWrapping="Wrap" />
    </Grid>
</UserControl>