<Application x:Class="U148.Uwp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="using:U148.Uwp.ViewModels"
             xmlns:converters="using:U148.Uwp.Converters"
             RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/U148ButtonStyle.xaml" />
                <ResourceDictionary Source="/Styles/U148ColorStyle.xaml" />
                <ResourceDictionary Source="/Styles/U148PivotStyle.xaml" />
                <ResourceDictionary Source="/Styles/U148TextControlStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <viewModels:ViewModelLocator x:Key="Locator" />
            <converters:ThemeModeToRequestedThemeConverter x:Key="ThemeModeToRequestedThemeConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>